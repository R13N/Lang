Nat
---
Simple, naive natural number implementation.
---

import Category.Eq
import Data.Bool
import Collection.Maybe

-- A natural number, which might be zero
data Nat	= Zero | Succ Nat

type Nat'	= Nat

instance Nat is Eq


(+)		: Nat -> Nat -> Nat
(Succ i) j	= Succ (i + j)
0 j		= j


pred		: Nat' -> Nat
(Succ i)	= i
Zero		= Zero
